<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sp.app.mapper.PointRecordMapper">
	
	<sql id="where-list">
    <choose>
        <when test="schType == 'all'">
        </when>
        
        <when test="schType == 'earn'">
            pret = '적립'
        </when>
        
        <when test="schType == 'use'">
            pret = '사용'
        </when>

        <when test="schType == 'expire'">
            pret = '소멸'
        </when>

        <when test="schType == 'charge'">
            pret = '충전'
        </when>
        <otherwise>
        </otherwise>
    </choose>
	</sql>
	
	
	<select id="dataCount" parameterType="map" resultType="Integer">
		SELECT NVL(COUNT(*),0)
		FROM point_record
		<where>
			<if test="schType != null">
				<include refid="where-list"/>
			</if>
			AND num = #{num}
		</where>
	</select>

	<select id="listPoint" parameterType="map" resultType="com.sp.app.model.PointRecord">
		SELECT *
		FROM point_record
		<where>
			<if test="schType != null">
				<include refid="where-list"/>
			</if>
			AND num = #{num}
		</where>		
		ORDER BY prnum DESC
		OFFSET #{offset} ROWS FETCH FIRST #{size} ROWS ONLY
	</select>
	
	<select id="totalPoint" parameterType="Long" resultType="Integer">
		SELECT pretp 
		FROM point_record 
		WHERE num = #{num} 
		ORDER BY prnum DESC 
		FETCH FIRST 1 ROWS ONLY
	</select>
	
	
</mapper>